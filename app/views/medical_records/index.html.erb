<h1><%= @patient.last_name %> <%= @patient.first_name %> さんの診療記録</h1>

<table>
  <thead>
    <tr>
      <th>診察日時</th>
      <th>主訴</th>
      <th>診療計画</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @medical_records.each do |record| %>
      <tr>
        <td><%= record.visited_at %></td>
        <td><%= record.subjective %></td>
        <td><%= record.plan %></td>
        <td>
          <%= link_to "詳細", patient_medical_record_path(@patient, record) %>
          <%# <%= link_to "編集", edit_patient_medical_record_path(@patient, record) %>
          <%# <%= link_to "削除", patient_medical_record_path(@patient, record), method: :delete, data: { confirm: "本当に削除しますか？" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "新しい診療記録を追加", new_patient_medical_record_path(@patient), class: "btn btn-primary" %>
<%= link_to "患者一覧に戻る", patients_path, class: "btn btn-secondary" %>