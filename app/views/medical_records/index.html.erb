<h2><%= @patient.last_name %> <%= @patient.first_name %> さんの診療記録</h2>

<table>
  <thead>
    <tr>
      <th>記録日</th>
      <th>症状</th>
      <th>医師のコメント</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @medical_records.each do |record| %>
      <tr>
        <td><%= record.date %></td>
        <td><%= record.symptoms %></td>
        <td><%= record.doctor_comment %></td>
        <td>
          <%= link_to '詳細', patient_medical_record_path(@patient, record) %> |
          <%= link_to '編集', edit_patient_medical_record_path(@patient, record) %> |
          <%= link_to '削除', patient_medical_record_path(@patient, record), method: :delete, data: { confirm: '削除しますか？' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '新しい診療記録を追加', new_patient_medical_record_path(@patient), class: 'btn btn-primary' %>
<%= link_to '患者一覧に戻る', patients_path, class: 'btn btn-secondary' %>
