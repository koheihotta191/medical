<h1 class="page-title"><%= @patient.last_name %> <%= @patient.first_name %> さんの診療記録を新規登録</h1>

<div class="form-container">
  <%= form_with model: [@patient, @medical_record], local: true do |form| %>
    <div class="form-group">
      <%= form.label :date, "診察日", class: "form-label" %>
      <%= form.date_field :date, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :symptoms, "症状", class: "form-label" %>
      <%= form.text_area :symptoms, class: "form-control", rows: 4 %>
    </div>

    <div class="form-group">
      <%= form.label :doctor_comment, "医師コメント", class: "form-label" %>
      <%= form.text_area :doctor_comment, class: "form-control", rows: 4 %>
    </div>

    <div class="form-actions">
      <%= form.submit "登録する", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>

<div class="actions">
  <%= link_to '戻る', patient_medical_records_path(@patient), class: 'btn btn-secondary' %>
  <%= link_to '患者一覧に戻る', patients_path, class: 'btn btn-secondary' %>
</div>

<div class="logout-form">
  <%= form_with url: destroy_user_session_path, method: :delete do %>
    <%= submit_tag "ログアウト", class: "btn btn-danger" %>
  <% end %>
</div>