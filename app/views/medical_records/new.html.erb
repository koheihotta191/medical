<h1><%= @patient.last_name %> <%= @patient.first_name %> さんの診療記録を新規登録</h1>

<%= form_with model: [@patient, @medical_record], local: true do |form| %>
  <div>
    <%= form.label :date, "診察日" %><br>
    <%= form.date_field :date %>
  </div>

  <div>
    <%= form.label :symptoms, "症状" %><br>
    <%= form.text_area :symptoms %>
  </div>

  <div>
    <%= form.label :doctor_comment, "医師コメント" %><br>
    <%= form.text_area :doctor_comment %>
  </div>

  <div>
    <%= form.submit "登録する", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to '戻る', patient_medical_records_path(@patient), class: 'btn btn-secondary' %>
<%= link_to '患者一覧に戻る', patients_path, class: 'btn btn-secondary' %>
<%= form_with url: destroy_user_session_path, method: :delete do %>
  <%= submit_tag "ログアウト" %>
<% end %>