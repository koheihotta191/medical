<h1>患者一覧</h1>

<table>
  <thead>
    <tr>
      <th>氏名</th>
      <th>生年月日</th>
      <th>電話番号</th>
      <th>メール</th>
      <th>住所</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.last_name %> <%= patient.first_name %></td>
        <td><%= patient.birth_date %></td>
        <td><%= patient.phone_number %></td>
        <td><%= patient.email %></td>
        <td><%= patient.address %></td>
        <td>
          <%= link_to '詳細', patient_path(patient) %> |
          <%= link_to '編集', edit_patient_path(patient) %> |
          <%= link_to '削除', patient_path(patient), method: :delete, data: { confirm: "本当に削除しますか？" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '新規患者登録', new_patient_path, class: 'btn btn-primary' %>

<%= link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: :delete }, class: 'btn btn-danger' %>